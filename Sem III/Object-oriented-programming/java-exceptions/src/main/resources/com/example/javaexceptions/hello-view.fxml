<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javaexceptions.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label alignment="CENTER" text="Enter your card information" textAlignment="CENTER" />
   <FlowPane alignment="CENTER" columnHalignment="CENTER" prefHeight="200.0" prefWidth="200.0">
      <children>
         <TextField fx:id="cardNumberField" alignment="CENTER" promptText="XXXX-XXXX-XXXX-XXXX">
            <FlowPane.margin>
               <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
            </FlowPane.margin></TextField>
         <TextField fx:id="expiryDateField" maxWidth="77.0" promptText="MM/YYYY">
            <FlowPane.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </FlowPane.margin></TextField>
         <TextField fx:id="cvvCodeField" maxWidth="77.0" promptText="CVV">
            <FlowPane.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </FlowPane.margin></TextField>
      
          <Label fx:id="errorMessage" alignment="CENTER" minWidth="164.0" textAlignment="CENTER" textFill="#f20000">
            <FlowPane.margin>
               <Insets top="10.0" />
            </FlowPane.margin>
         </Label>
      </children>
   </FlowPane>
    <Button fx:id="submitButton" onAction="#getCardNumber" text="Submit" />
</VBox>
